<Project Sdk="Microsoft.NET.Sdk">
	<!--<Import Project="BIT.Xpo.props"/>-->
	<PropertyGroup>
		<ProjectGuid>c4396657-dc12-4d0a-8816-c5d0db025151</ProjectGuid>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<Configurations>Debug;Release</Configurations>
		<GenerateAssemblyInfo>True</GenerateAssemblyInfo>
		<Authors>José Manuel Ojeda Melgar</Authors>
		<PackageTags>DevExpress XPO XAF Xamarin AspNetCore</PackageTags>
		<Company>BIT Frameworks</Company>
		<Description>Xpo common functions for Asp Net Core</Description>
		<DebugType>Full</DebugType>
		<PackageProjectUrl>https://www.bitframeworks.com</PackageProjectUrl>
		<DebugSymbols>True</DebugSymbols>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
	</PropertyGroup>
	<ItemGroup>
		<None Include="LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)" />
	</ItemGroup>
	<!--Nuget Generation Section Start-->
	<PropertyGroup Condition="'$(Configuration)|$(Platform)' == 'Release|AnyCPU'">
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<AssemblyName>BIT.Xpo.AspNetCore.v$(NugetVersion)</AssemblyName>
		<Version>$(NugetVersion)</Version>
		<PackageId>BIT.Xpo.AspNetCore</PackageId>
	</PropertyGroup>
	<!--Nuget Generation Section End-->
	<!--Nuget Reference Section Start-->
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.App"/>
		<PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.3.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration.FileExtensions" Version="2.3.0" />
		<PackageReference Include="DevExpress.Xpo" Version="$(XpoVersion)" />
		<ProjectReference Include="..\BIT.AspNetCore\BIT.AspNetCore.csproj" />
		<ProjectReference Include="..\BIT.Data\BIT.Data.csproj" />
	</ItemGroup>
	<!--NugetProject ReferencesSection End-->
	<!--Extra Start-->
	<!--Extra End-->
	<Target Name="CopyPackage" AfterTargets="Pack">
		<Copy SourceFiles="bin\$(ConfigurationName)\$(PackageId).$(PackageVersion).nupkg" DestinationFolder="$(USERPROFILE)\Documents\MyNugets\" />
	</Target>
</Project>